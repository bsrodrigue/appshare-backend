# ============================================================================
# AppShare Backend - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env to version control!
# ============================================================================

# =========================
# Server Configuration
# =========================
PORT=8080
ENVIRONMENT=development  # development, staging, production

# =========================
# Logging Configuration
# =========================
LOG_LEVEL=debug          # debug, info, warn, error
LOG_FORMAT=text          # text, json (use json in production)

# =========================
# Database Configuration
# =========================
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppassword
POSTGRES_DB=appdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_SSLMODE=disable

# Alternative: Use a single DATABASE_URL instead of individual vars
# DATABASE_URL=postgres://appuser:apppassword@localhost:5432/appdb?sslmode=disable

# =========================
# JWT Configuration
# =========================
# IMPORTANT: Generate a secure key for production using:
# openssl rand -base64 32
JWT_SECRET_KEY=dev-secret-key-change-in-production-32chars
JWT_ACCESS_TOKEN_MINUTES=15
JWT_REFRESH_TOKEN_DAYS=7
JWT_ISSUER=appshare

# =========================
# Goose (Migrations)
# =========================
GOOSE_DRIVER=postgres
GOOSE_DBSTRING="postgres://appuser:apppassword@localhost:5432/appdb?sslmode=disable"


